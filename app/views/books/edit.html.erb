<main>
  <div class="container">
    
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
            <ul>
               <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>
        
        <h2>Editing Book</h2>
        
         <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="user_name">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"title"%>
        </div>
        <div class="form-group">
          <label for="opinion">Opinion</label>
          <%= f.text_area :body, class:"form-control  book_body"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
        <% end %>
        
        <span><%= link_to "Show", book_path(@book.id) %></span>
        |
        <span><%= link_to "Back", books_path %></span>
        
      </div>
    </div>
  </div>
</main>
