<main>
  
  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <!--User infoとNew book-->
      <div class="col-md-3">
        <h2>User info</h2>
         <%= render "users/info", user:@user %>
         <div class="row">
           <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
             <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          
        <h2 class="mt-3">New book</h2>
        <%= render "new" ,book:@book %>
      </div>
      <!--ここまで-->
      
      <!--Users-->
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= link_to user_path(@user) do %>
                   <%= image_tag @user.get_profile_image(100,100) %>
                  <% end %> <br>
                  <%= link_to @user.name, user_path(@user) %>
              </td>
              <td>
                <%= link_to @book_show.title, book_path(@book_show)%>
              </td>
              <td>
                <%= @book_show.body %>
              </td>
              <td>
                <% if @book_show.user_id == current_user.id %>
                <%= link_to "Edit", edit_book_path(@book_show), class: "btn btn-sm btn-danger"%>
              </td>
              <td><%= link_to "Destroy",book_path(@book_show), method: :delete, class: "btn-sm btn-success" %>
               <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
      
      
    </div>
  </div>
</main>
